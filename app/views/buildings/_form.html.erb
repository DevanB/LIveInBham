<%= simple_form_for(@building) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip_code_id, collection: ZipCode.all, label_method: :zip_code, value_method: :zip_code, label: "Zip Code:", include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button small radius' %>
  </div>
<% end %>
