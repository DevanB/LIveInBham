<%= simple_form_for(@building) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.association :zip_code, label_method: :zip_code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button small radius' %>
  </div>
<% end %>
