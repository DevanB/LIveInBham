<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category Begin Number</th>
      <th>Category End Number</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.catBegin %></td>
        <td><%= category.catEnd %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "button small success radius" %>
